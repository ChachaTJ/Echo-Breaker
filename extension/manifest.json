{
  "manifest_version": 3,
  "name": "EchoBreaker - YouTube Balance",
  "version": "1.0.2",
  "description": "Break the YouTube echo chamber by analyzing your content consumption and getting diverse recommendations.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://*.replit.dev/*",
    "https://*.replit.app/*",
    "http://localhost:5000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
